<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns:context="http://www.springframework.org/schema/context"
 xmlns:util="http://www.springframework.org/schema/util"
 xmlns:mvc="http://www.springframework.org/schema/mvc"
 xmlns:aop="http://www.springframework.org/schema/aop" 
 xmlns:security-extras="http://www.xebia.fr/schema/xebia-spring-security-extras"
 xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd        
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd 
        http://www.xebia.fr/schema/xebia-spring-security-extras http://www.xebia.com/schema/security/xebia-spring-security-extras.xsd ">
 
   <context:annotation-config/>   
   <context:component-scan base-package="com.sigepro.web.controller" />
   <context:component-scan base-package="com.sigepro.web.service.impl" />
<!--    <context:component-scan base-package="com.sigepro.web.transformer" /> -->
      
   
   <mvc:annotation-driven/>   

   <aop:aspectj-autoproxy  proxy-target-class="true" />
<!--   activate the AuditAspect  -->
<!--    <security-extras:audit-aspect /> -->
	
   <import resource="classpath:/hibernate/db_spring_hsql.xml" />
   <import resource="classpath:/hibernate/db_dao.xml" />
   <import resource="classpath:/hibernate/db_dao-locator.xml" />
<!--    <import resource="classpath:/mail/mail-config.xml" /> -->
   
            
  	<bean  id="messageSource"  
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>messages/view</value>
			</list>
		</property>
	</bean>
   

	<bean id="jspViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
	  <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
	  <property name="prefix" value="/WEB-INF/view/"/>
	  <property name="suffix" value=".jsp"/>
	</bean>
	
	
	<bean id="clientTransformer" class="com.sigepro.web.transformer.ClienteTransformer">
	</bean>
	
	<bean id="abonoTransformer" class="com.sigepro.web.transformer.AbonoTransformer">
	</bean>
	
	<bean id="visitaTransformer" class="com.sigepro.web.transformer.VisitaTransformer">
	</bean>
	
<!-- 	<bean id="productOCTransformer" class="com.decorart.web.transformer.ProductOCTransformer"> -->
<!-- 	</bean> -->
	

</beans>
